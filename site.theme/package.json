{
  "name": "aem-sites-template-basic-theme",
  "version": "0.0.1",
  "description": "Basic AEM site theme",
  "private": true,
  "main": "src/main/webpack/site/main.ts",
  "license": "MIT License, Copyright (c) 2020 Adobe",
  "scripts": {
    "dev": "webpack -d --env dev --config ./webpack.dev.js",
    "dev-watch": "watch 'npm run dev' src",
    "live": "npm-run-all -p dev-watch proxy:wait",
    "proxy": "node proxy.js",
    "proxy:wait": "sleep 5 && npm run proxy",
    "prod": "webpack -p --config ./webpack.prod.js",
    "start": "webpack-dev-server --open --config ./webpack.dev.js",
    "zip": "run-s zip:clear zip:build",
    "zip:build": "cd dist && bestzip ../compiled-theme.zip * && cd ..",
    "zip:clear": "rm -rf compiled-theme.zip",
    "deploy": "npm run zip && dotenv -- cross-var curl -u admin:admin -F 'file=@compiled-theme.zip' http://%HOST%:%PORT%/conf/%SITE%.importtheme.html"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@storybook/html": "^5.1.11",
    "acorn": "^6.1.0",
    "autoprefixer": "^9.2.1",
    "babel-loader": "^8.0.6",
    "bestzip": "^2.1.6",
    "browserslist": "^4.2.1",
    "chokidar": "^3.4.2",
    "clean-webpack-plugin": "^3.0.0",
    "connect": "^3.7.0",
    "copy-webpack-plugin": "^5.0.4",
    "cross-var": "^1.1.0",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.2.0",
    "fs": "0.0.1-security",
    "html-webpack-plugin": "^3.2.0",
    "http": "0.0.1-security",
    "http-proxy": "^1.18.1",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass": "^1.17.2",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.14.1",
    "terser-webpack-plugin": "^1.4.1",
    "ts-loader": "^5.3.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.13.0",
    "tslint-loader": "^3.5.4",
    "tslint-webpack-plugin": "^2.0.2",
    "typescript": "^3.3.3333",
    "watch": "^1.0.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.9.0",
    "webpack-import-glob-loader": "^1.6.3",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "jquery": "^3.4.1",
    "normalize-scss": "^7.0.1"
  },
  "browserslist": [
    "last 2 version",
    "> 1%"
  ]
}
